{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2017",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"incremental": true
	},
	"exclude": [
		"node_modules",
		"./src/scripts/translate.mts",
		".next",
		"out",
		"storybook-static"
	],
	"include": [
		"next.config.js",
		"**/*.ts",
		"**/*.mts",
		"next-sitemap.js",
		"postcss.config.js",
		"next.config.js",
		"tailwind.config.js",
		"**/*.tsx",
		"prettier.config.js",
		"**/*.scss",
		"theme.config.js",
		"scripts/gen-rss.tsx",
		"audio.d.ts",
		".eslintrc.json"
	]
}
